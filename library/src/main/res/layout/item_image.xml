<?xml version="1.0" encoding="utf-8"?>
<com.summer.imageselector.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.summer.imageselector.view.SquaredImageView
        android:id="@+id/siv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/fl_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_image_selected_index"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle_white"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </FrameLayout>

</com.summer.imageselector.view.SquareFrameLayout>